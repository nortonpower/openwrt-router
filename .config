CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_Generic=y

# LuCI Web Interface
CONFIG_PACKAGE_luci=y

# Network support
CONFIG_PACKAGE_kmod-e1000e=y     # Intel e1000 NIC support
CONFIG_PACKAGE_kmod-igb=y        # Intel I226-V
CONFIG_PACKAGE_kmod-iwlwifi=y    # WiFi support (generic)
CONFIG_PACKAGE_kmod-iwlwifi-ax210-firmware=y

# WiFi firmware (Intel AX210)
CONFIG_PACKAGE_iwlwifi-firmware-ax210=y

# HDMI Display Support
CONFIG_PACKAGE_kmod-drm=y
CONFIG_PACKAGE_kmod-drm-i915=y
CONFIG_PACKAGE_kmod-fb=y
CONFIG_PACKAGE_kmod-fbcon=y
CONFIG_PACKAGE_kmod-console-tools=y
CONFIG_PACKAGE_luci-app-uhttpd=y

# Input Devices
CONFIG_PACKAGE_kmod-usb-hid=y
CONFIG_PACKAGE_kmod-hid-generic=y
CONFIG_PACKAGE_kmod-hid=y

# Filesystem support
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y
CONFIG_PACKAGE_kmod-usb-storage=y

# Utilities
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_wget=y
