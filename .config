# Target system
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_General=y
CONFIG_TARGET_x86_64_uClibc=y
CONFIG_TARGET_x86_64_mini=y

# Kernel and architecture
CONFIG_LINUX_5_10=y
CONFIG_LINUX_5_10_TARGET=y
CONFIG_KERNEL_DRM=y
CONFIG_KERNEL_X86_64=y

# Display and graphics support (HDMI output)
CONFIG_PACKAGE_kmod-fbdev=y               # Framebuffer support
CONFIG_PACKAGE_kmod-i915=y                # Intel Graphics driver (i915 for Intel GPUs)
CONFIG_PACKAGE_kmod-drm-intel=y           # Intel Direct Rendering Manager for GPUs
CONFIG_PACKAGE_kmod-ttm=y                 # TTM (Memory manager) support
CONFIG_PACKAGE_kmod-modesetting=y         # Video modesetting
CONFIG_PACKAGE_luci-app-advanced=y        # Luci Advanced settings (display resolution)
CONFIG_PACKAGE_kmod-fb-radeon=y           # Radeon framebuffer driver (optional if you use Radeon)

# Network driver configuration
CONFIG_PACKAGE_kmod-ixgbe=y          # Intel I226-V 2.5GbE Network Card
CONFIG_PACKAGE_kmod-iwlwifi-ax200=y  # Intel AX200 Wi-Fi Chipset
CONFIG_PACKAGE_iwinfo=y              # Wi-Fi Information Tool

# USB driver configuration (for USB devices)
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb-ohci=y
CONFIG_PACKAGE_kmod-usb-ehci=y
CONFIG_PACKAGE_kmod-usb-hcd=y
CONFIG_PACKAGE_kmod-usb-net-rtl8150=y
CONFIG_PACKAGE_kmod-usb-net-rtl8152=y

# System and packages for LucI interface
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# Network and firewall
CONFIG_PACKAGE_radvd=y
CONFIG_PACKAGE_odhcpd=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_dnsmasq=y

# Additional network and system packages
CONFIG_PACKAGE_kmod-nf-conntrack=n
CONFIG_PACKAGE_kmod-nf-conntrack6=n
CONFIG_PACKAGE_kmod-nf-ipt=n
CONFIG_PACKAGE_kmod-nf-ipt6=n
CONFIG_PACKAGE_kmod-nf-log=n
CONFIG_PACKAGE_kmod-nf-log-conntrack=n

# Network routing and VPN support
CONFIG_PACKAGE_openvpn-openssl=n
CONFIG_PACKAGE_iproute2=y
CONFIG_PACKAGE_nftables=n

# Miscellaneous
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_curl=y

# Custom kernel configuration options
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-uas=y
CONFIG_PACKAGE_kmod-fs-ext4=y

# Debugging and logging tools
CONFIG_PACKAGE_logd=y
CONFIG_PACKAGE_kmod-usb-serial-ftdi=y
CONFIG_PACKAGE_kmod-usb-serial-qaudriogeneric=y
