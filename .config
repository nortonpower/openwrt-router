CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_Generic=y

# Filesystem and Boot
CONFIG_GRUB_IMAGES=y
CONFIG_VMDK_IMAGES=y
CONFIG_EXT4_FS=y
CONFIG_TARGET_IMAGES_GZIP=y

# LuCI Interface
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y

# Networking Tools
CONFIG_PACKAGE_kmod-igc=y
CONFIG_PACKAGE_kmod-iwlwifi=y
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_iwlwifi-firmware-ax210=y
CONFIG_PACKAGE_wireless-tools=y
CONFIG_PACKAGE_wpad-openssl=y

# Display, Keyboard, Mouse Support
CONFIG_PACKAGE_xorg-server=y
CONFIG_PACKAGE_xinit=y
CONFIG_PACKAGE_luci-app-webshell=y
CONFIG_PACKAGE_input-core=y
CONFIG_PACKAGE_kmod-usb-hid=y
CONFIG_PACKAGE_kmod-hid=y

# USB & Filesystems
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y

# Tools
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_screen=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y

# Firmware
CONFIG_PACKAGE_iwlwifi-firmware-ax210=y
